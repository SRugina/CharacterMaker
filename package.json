{
  "name": "character-maker",
  "private": true,
  "description": "",
  "license": "BSD-3-Clause",
  "sideEffects": false,
  "scripts": {
    "typecheck": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "build": "NODE_ENV=production npm-run-all -s build:css -s build:remix -s build-switch-worker -s build:remix -s build-switch-cf",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o ./app/tailwind.css",
    "build:remix": "remix build",
    "build-switch-worker": "ts-node -O '{\"module\": \"commonjs\"}' ./service-worker/build-scripts/build-switch-worker.ts",
    "build-switch-cf": "ts-node -O '{\"module\": \"commonjs\"}' ./service-worker/build-scripts/build-switch-cf.ts",
    "dev": "NODE_ENV=development npm-run-all -s build -s watch",
    "watch": "run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o ./app/tailwind.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "start": "cross-env NODE_ENV=production yarn dev:wrangler",
    "prepare": "husky install",
    "postinstall": "remix setup cloudflare"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "cross-env": "^7.0.3",
    "idb": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.3.3",
    "@remix-run/eslint-config": "^1.3.3",
    "@tailwindcss/typography": "^0.5.2",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "autoprefixer": "^10.4.4",
    "esbuild": "^0.14.28",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
