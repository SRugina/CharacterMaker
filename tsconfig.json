{
  "include": [
    "remix.env.d.ts",
    ".eslintrc.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "worker-build",
    "public/build",
    "public/sw.js",
    "functions/[[path]].js"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2021", "WebWorker"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "noEmit": true
  }
}
